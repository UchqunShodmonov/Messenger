<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/settings_buttons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/app_margin">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/add_contacts_list_item_photo"
        android:layout_width="@dimen/settings_change_photo_height"
        android:layout_height="@dimen/settings_change_photo_width"
        android:src="@drawable/default_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/add_contacts_list_item_choice"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/colorAccent"
        android:src="@drawable/ic_choice"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/add_contacts_list_item_photo"
        app:layout_constraintEnd_toEndOf="@id/add_contacts_list_item_photo" />

    <TextView
        android:id="@+id/add_contacts_item_name"
        style="@style/normalText"
        android:text="Name Item"
        app:layout_constraintStart_toEndOf="@id/add_contacts_list_item_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_contacts_last_message"
        style="@style/smallText"
        android:text="last_message"
        app:layout_constraintStart_toEndOf="@id/add_contacts_list_item_photo"
        app:layout_constraintTop_toBottomOf="@id/add_contacts_item_name" />
</androidx.constraintlayout.widget.ConstraintLayout>